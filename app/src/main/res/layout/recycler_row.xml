<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginVertical="8sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_pphoto"
            android:layout_width="60sp"
            android:layout_height="55sp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_margin="8sp">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fullNameUsernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="4sp"
                android:text="Full Name @username"
                android:textSize="15sp">
            </TextView>

            <TextView
                android:id="@+id/postDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="4sp"
                android:text="Date"
                android:textSize="15sp">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userCommentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user comment"
            android:textSize="17sp"
            android:layout_margin="8sp">
        </TextView>

        <ImageView
            android:id="@+id/userPostImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_margin="8sp">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.like.LikeButton
                android:id="@+id/thumb_button"
                app:icon_size="20dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20sp"
                android:layout_marginVertical="8sp"
                app:icon_type="heart"
                app:circle_end_color="#02448C"
                app:circle_start_color="#0562C6"
                app:like_drawable="@drawable/thumb_on"
                app:unlike_drawable="@drawable/thumb_off"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>